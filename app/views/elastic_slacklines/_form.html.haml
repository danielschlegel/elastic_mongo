= form_for @elastic_slackline do |f|
  - if @elastic_slackline.errors.any?
    #error_explanation
      %h2= "#{pluralize(@elastic_slackline.errors.count, "error")} prohibited this elastic_slackline from being saved:"
      %ul
        - @elastic_slackline.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :weight
    = f.number_field :weight
  .field
    = f.label :elasticity
    = f.text_field :elasticity
  .actions
    = f.submit 'Save'
